<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="option">
	<select id="getList" resultType="optionvo">
		<![CDATA[
			SELECT	no,
					name
			FROM	bitmall.option
		]]>
	</select>
	
	<insert id="insert">
		<![CDATA[
			INSERT 
			INTO bitmall.option 
			VALUES (
						null,
						#{name}
					)		
		]]>
	</insert>
	
</mapper>